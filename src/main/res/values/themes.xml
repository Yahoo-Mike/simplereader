<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- SimpleReader Base Theme -->
    <style name="Theme.SimpleReader" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- parent=NoActionBar means remove system ActionBar because we'll define our own-->
    </style>

    <!-- BottomSheetDialog for the BottomSheetDialogFragment -->

    <style name="Theme.SimpleReader.BottomSheetDialog" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.SimpleReader.BottomSheet</item>
    </style>

    <style name="Widget.SimpleReader.BottomSheet" parent="Widget.Material3.BottomSheet.Modal">
        <!-- corner radius -->
        <item name="shapeAppearanceOverlay">@style/SimpleReaderBottomSheet</item>
    </style>

    <style name="SimpleReaderBottomSheet">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>



    <!-- END BottomSheetDialog for the BottomSheetDialogFragment -->

</resources>