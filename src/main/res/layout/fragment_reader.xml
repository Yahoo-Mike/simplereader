<?xml version="1.0" encoding="utf-8"?>
<com.simplereader.reader.ReaderTouchFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reader_touch_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_reader_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ImageView
        android:id="@+id/current_bookmark_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="top|end"
        android:layout_marginEnd="48dp"
        android:layout_margin="12dp"
        android:visibility="gone"
        android:contentDescription="@string/current_bookmark"
        android:src="@drawable/ic_current_bookmark" />

</com.simplereader.reader.ReaderTouchFrameLayout>